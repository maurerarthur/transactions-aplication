generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

model Client {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  transactions Transaction[]
}

model Transaction {
  id String @id @default(uuid())
  amount Float
	type String
  dueDateTime String
  client Client @relation(fields: [clientId], references: [id])
  clientId String
	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt
}